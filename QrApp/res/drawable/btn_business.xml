<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#C2F4F7" />
            <stroke
                android:width="1dp"
                android:color="#9DE0E4" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
				android:startColor="#C2F4F7"
                android:endColor="#D8FDFF"
                android:angle="270" 
                android:type="linear"
                />
            <stroke
                android:width="1dp"
                android:color="#9DE0E4" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            
        </shape>
    </item>

</selector>