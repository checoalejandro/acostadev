<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#E4F6F7" />
            <padding
                android:left="3dp"
                android:top="5dp"
                android:right="3dp"
                android:bottom="5dp" />
            <corners 
                android:radius="2dp"/>
            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
				android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270" 
                android:type="linear"
                />

            <padding
                android:left="3dp"
                android:top="5dp"
                android:right="3dp"
                android:bottom="5dp" />
            
        </shape>
    </item>

</selector>