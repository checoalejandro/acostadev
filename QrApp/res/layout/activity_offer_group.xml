<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OfferGroupActivity" >

    <include
        android:id="@+id/tobActionBarContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_action_bar" />

    <include
        android:id="@+id/butActionBarContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/bottom_action_bar" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/butActionBarContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tobActionBarContent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/offergroup_bizname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/btn_register_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:text="" />

        <TextView
            android:id="@+id/offergroup_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/offergroup_title"
            android:textAppearance="@style/bizinfo_title" />

        <LinearLayout
            android:id="@+id/offergroup_offers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.58"
            android:background="@drawable/rounded_bottom_edittext"
            android:orientation="vertical"
            android:padding="10dp" >

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>